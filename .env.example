# =========================================
# NicheBot Runtime Configuration Template
# Runtime default: ~/.nichebot/.env
# Override home: NICHEBOT_HOME=/custom/path
# =========================================

# --- TELEGRAM (REQUIRED) ---
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Strict single-user mode is mandatory.
# Get your Telegram user ID from @userinfobot
TELEGRAM_ALLOWED_USER_ID=

# --- LLM PROVIDER (REQUIRED - choose one) ---
# Options: openai, anthropic, deepseek
LLM_PROVIDER=deepseek

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude (https://console.anthropic.com/)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# DeepSeek (https://platform.deepseek.com/)
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

# --- TWITTER/X (OPTIONAL) ---
# Get keys from https://developer.twitter.com/
# Without these, the bot generates content but cannot publish
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# --- GENERAL SETTINGS ---
# Bot interface language: tr (Turkish) or en (English)
DEFAULT_LANGUAGE=en
# Maximum tweets per day (auto-posting limit)
MAX_DAILY_POSTS=5
# Prompt template version (supported: v1)
PROMPT_TEMPLATE_VERSION=v1
# Minimum quality score for scheduler auto-publish (0-100)
QUALITY_MIN_AUTO_PUBLISH_SCORE=65
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Timezone for scheduled posts
TZ=UTC
# Environment: development or production
NODE_ENV=production

# --- OBSERVABILITY (OPTIONAL) ---
# Enable health/metrics HTTP server
OBSERVABILITY_ENABLED=true
# Bind host (use 127.0.0.1 in single-host setups)
OBSERVABILITY_HOST=127.0.0.1
# Listen port for /health, /ready, /metrics
OBSERVABILITY_PORT=9464
# Optional token: required in production if host is not local (127.0.0.1/localhost)
# OBSERVABILITY_TOKEN=change-me
